const server = (() => {
  const https = require("https");
  return https.createServer(
    require("../src/infrastructure-layer/configs/ssl-config-local")(),
    app
  );
})();

require("../src/application-layer/batches").run();

server.listen(process.env.PORT, () => {
  console.log(`
